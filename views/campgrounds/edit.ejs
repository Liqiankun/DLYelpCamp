<% include ../footerHeader/header.ejs %>
<div class='container'>
  <div class=row>
    <h1 style='text-align: center'>Edit <%= campground.name %></h1>
    <div style="width: 35%; margin: 25px auto;">
      <form action="/campgrounds/<%= campground._id %>?_method=put" method="post">
        <div class='form-group'>
          <input class='form-control' type="text" name="campground[name]" placeholder="name" value='<%= campground.name %>'>
        </div>
        <div class='form-group'>
          <input class='form-control' type="text" name="campground[image]" placeholder="image url" value='<%= campground.image %>'>
        </div>
        <div class='form-group'>
          <input class='form-control' type="text" name="campground[description]" placeholder="desc" value='<%= campground.description %>'>
        </div>
        <div class='form-group'>
          <button class='btn btn-lg btn-primary btn-block' type="submit">Submit</button>
        </div>
      </form>
      <a href="/">Go back</a>
    </div>
  </div>
</div>
<% include ../footerHeader/footer.ejs %>
